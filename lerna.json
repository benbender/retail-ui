{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/*.snap",
        "**/*.test.*",
        "**/*.stories.*",
        "**/*.md"
      ],
      "message": "chore(release): publish"
    }
  }
}
